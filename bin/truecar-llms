#!/bin/bash

# TrueCar LLMs.txt Generator Script
# This script generates llms.txt files for TrueCar.com with specific URL patterns

set -e  # Exit on any error

# Create output directory
mkdir -p out

# Run with TrueCar-specific patterns
echo "üìã Running with TrueCar-specific patterns..."
python generate-llmstxt.py https://www.truecar.com \
  --max-urls 1000 \
  --output-dir ./out \
  --include-pattern '^https://www\.truecar\.com/$' \
  --include-pattern '^https://www\.truecar\.com/compare/' \
  --include-pattern '^https://www\.truecar\.com/compare/.*/' \
  --include-pattern '^https://www\.truecar\.com/best-cars-trucks/.*/.*/' \
  --include-pattern '^https://www\.truecar\.com/overview/.*/' \
  --include-pattern '^https://www\.truecar\.com/overview/.*/.*/' \
  --include-pattern '^https://www\.truecar\.com/.*-calculator/' \
  --include-pattern '^https://www\.truecar\.com/[^/]+/[^/]+/lease/' \
  --include-pattern '^https://www\.truecar\.com/[^/]+/deals/' \
  --include-pattern '^https://www\.truecar\.com/sell-your-car' \
  --include-pattern '^https://www\.truecar\.com/electric/' \
  --include-pattern '^https://www\.truecar\.com/auto-tariffs-explained/' \
  --include-pattern '^https://www\.truecar\.com/ev-tax-credit/' \
  --include-pattern '^https://www\.truecar\.com/used-cars-for-sale/listings/' \
  --include-pattern '^https://www\.truecar\.com/new-cars-for-sale/listings/'

echo "‚úÖ TrueCar LLMs.txt generation completed!"
echo "üìÅ Output files saved to: ./out/"
